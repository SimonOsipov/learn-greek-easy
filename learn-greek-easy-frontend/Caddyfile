:{$PORT:80}

root * /srv
encode gzip

# Logging for debugging
log {
    output stdout
    format json
    level INFO
}

# Health check endpoints - proxy to backend for real health data
# Matches /health, /health/live, /health/ready
handle /health* {
    reverse_proxy {
        dynamic a {$BACKEND_HOST:backend.railway.internal} {$BACKEND_PORT:8080} {
            refresh 1s
        }

        # Load balancer retries
        lb_try_duration 5s
        lb_retries 3

        # Passive health checks
        fail_duration 3s
        max_fails 1
        unhealthy_status 502 503 504

        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
    }
}

# Version endpoint - proxy to backend
handle /version {
    reverse_proxy {
        dynamic a {$BACKEND_HOST:backend.railway.internal} {$BACKEND_PORT:8080} {
            refresh 1s
        }

        lb_try_duration 5s
        lb_retries 3

        fail_duration 3s
        max_fails 1
        unhealthy_status 502 503 504

        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
    }
}

# API proxy to backend with dynamic DNS resolution for Railway
# Uses dynamic A record lookup with 1s refresh to handle backend IP changes
handle /api/* {
    reverse_proxy {
        dynamic a {$BACKEND_HOST:backend.railway.internal} {$BACKEND_PORT:8080} {
            refresh 1s
        }

        # Buffer request body to prevent streaming race condition
        # Ensures entire POST body is read before selecting upstream
        request_buffers 1MB

        # Allow retries for mutating methods (default is GET only)
        lb_retry_match {
            method POST PUT PATCH DELETE
        }

        # Load balancer retries - user never sees 502 from stale IPs
        lb_try_duration 5s
        lb_retries 3

        # Passive health checks (active health checks don't work with dynamic upstreams)
        fail_duration 3s
        max_fails 1
        unhealthy_status 502 503 504
        unhealthy_latency 10s

        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
        header_up X-Forwarded-Host {host}

        transport http {
            read_timeout 120s
            write_timeout 120s
            keepalive 30s
            keepalive_idle_conns 10
        }
    }
}

